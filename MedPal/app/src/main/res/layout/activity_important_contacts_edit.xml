<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImportantContacts"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/importantContacts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/importantContacts"
                android:textSize="35dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/colorPrimaryDark">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@mipmap/profile_pic_foreground"
                            android:contentDescription="Profile Picture"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/generalPractitioner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/generalPractitioner"
                            android:textColor="#FFFFFF"
                            android:textSize="25dp"
                            android:gravity="center"/>
                        <EditText
                            android:id="@+id/gpName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/colorPrimary"
                            android:textSize="20dp"
                            android:gravity="center"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:id="@+id/gpCall"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/phone"
                        android:textSize="20dp"
                        android:layout_weight="1"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center"
                        />
                    <EditText
                        android:id="@+id/gpPhone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="phone"
                        android:digits="0123456789+"
                        android:textSize="20dp"
                        android:layout_weight="1"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:id="@+id/gpMailLabel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/gpMail"
                        android:textSize="20dp"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center"
                        android:layout_weight="1"/>

                    <EditText
                        android:id="@+id/gpMail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="20dp"
                        android:layout_weight="1"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:id="@+id/gpGPS"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/address"
                        android:textSize="20dp"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center"
                        android:layout_weight="1"/>

                    <EditText
                        android:id="@+id/gpAddress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="15dp"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center"
                        android:layout_weight="1"/>
                </LinearLayout>

<!--    /////////////////////////////////////////////////////////////////////////////////////////////////////            -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/ecProfilePicture"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:contentDescription="@string/ecProfilePicture"
                                android:src="@mipmap/profile_pic_foreground" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/emergencyContact"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="@string/emergencyContact"
                                android:textColor="#FFFFFF"
                                android:textSize="25dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                                <EditText
                                    android:id="@+id/ecName"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="20dp"
                                    android:layout_weight="1"/>

                                <EditText
                                    android:id="@+id/ecRelation"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:textStyle="italic"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="20dp"
                                    android:layout_weight="1"/>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/ecCall"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/phone"
                            android:textSize="20dp"
                            android:layout_weight="1"
                            android:textColor="@color/colorPrimary"
                            android:gravity="center"
                            />

                        <EditText
                            android:id="@+id/ecPhone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:inputType="phone"
                            android:gravity="center"
                            android:digits="0123456789+"
                            android:textColor="@color/colorPrimary"
                            android:textSize="20dp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp">

                        <TextView
                            android:id="@+id/ecMailLabel"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/gpMail"
                            android:textSize="20dp"
                            android:textColor="@color/colorPrimary"
                            android:gravity="center"
                            android:layout_weight="1"/>

                        <EditText
                            android:id="@+id/ecMail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="20dp"
                            android:layout_weight="1"
                            android:textColor="@color/colorPrimary"
                            android:gravity="center"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/ecGPS"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/address"
                            android:textSize="20dp"
                            android:textColor="@color/colorPrimary"
                            android:gravity="center"
                            android:layout_weight="1"/>

                        <EditText
                            android:id="@+id/ecAddress"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="15dp"
                            android:textColor="@color/colorPrimary"
                            android:gravity="center"
                            android:layout_weight="1"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>