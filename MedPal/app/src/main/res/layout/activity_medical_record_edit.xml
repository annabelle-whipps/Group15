<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MedicalRecordEdit">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/medicalRecord"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/medicalRecord"
                        android:textSize="35dp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/profile_pic_foreground"
                        android:contentDescription="Profile Picture"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/personName"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/personName"
                        android:textSize="25dp"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp">
                    <TextView
                        android:id="@+id/dob"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/dob"
                        android:textSize="25dp"
                        android:layout_marginLeft="25dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:layout_weight="1"/>
                    <EditText
                        android:id="@+id/personDob"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/dateOfBirth"
                        android:textSize="25dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/address"
                        android:textSize="25dp"
                        android:layout_marginLeft="25dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:layout_weight="1"/>
                    <EditText
                        android:id="@+id/personAddress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/personAddress"
                        android:textSize="25dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_weight="1"/>
                    <EditText
                        android:id="@+id/personPostCode"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/personPostCode"
                        android:textSize="25dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_weight="1"/>
                    <EditText
                        android:id="@+id/personCity"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/personCity"
                        android:textSize="25dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/phone"
                        android:textSize="25dp"
                        android:layout_marginLeft="25dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:layout_weight="1"/>
                    <EditText
                        android:id="@+id/personPhone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/personPhone"
                        android:textSize="25dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/diseases"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/diseases"
                        android:textSize="25dp"
                        android:layout_marginLeft="25dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:layout_weight="1"/>
                    <EditText
                        android:id="@+id/diseasesList"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Diabete\nAsthma"
                        android:textSize="25dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/allergies"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/allergies"
                        android:textSize="25dp"
                        android:layout_marginLeft="25dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:layout_weight="1"/>
                    <EditText
                        android:id="@+id/allergiesList"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Mosquito bites"
                        android:textSize="25dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_weight="1"/>
                </LinearLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>